<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TMA.Mobile.Pages.RootPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Vandaag" Command="{Binding ToHomePageCommand}" />
            <Button Text="Geschiedenins" Command="{Binding ToDetailPageCommand}" />
            <Button Text="Beheer Taken" Command="{Binding ToChorePageCommand}" />
            <Button Text="Rapport" Command="{Binding ToReportPageCommand}" />
            <Button Text="Schedule Notification" Command="{Binding TestCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>