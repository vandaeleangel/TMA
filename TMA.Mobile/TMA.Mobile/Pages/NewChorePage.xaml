<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TMA.Mobile.Pages.NewChorePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Naam" FontSize="Title" HorizontalOptions="CenterAndExpand"/>

            <Entry Placeholder="Naam voor de taak" HorizontalOptions="CenterAndExpand"
                   Text="{Binding Name}"/>
            <Button Text="Luister" Command="{Binding SpeakCommand}"/>
            <Slider Value="{Binding SliderValue}" Minimum="0" Maximum="1" 
                    MinimumTrackColor="Black" MaximumTrackColor="DarkSlateGray" ThumbColor="DarkSlateGray"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" >
                <Button Text="Opslaan" HorizontalOptions="CenterAndExpand" Command="{Binding SaveCommand}" />
                <Button Text="Annuleren" HorizontalOptions="CenterAndExpand" Command="{Binding CancelCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>