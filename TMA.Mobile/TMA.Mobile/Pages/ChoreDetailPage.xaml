<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TMA.Mobile.Pages.ChoreDetailPage">

    <ContentPage.Content>

        <StackLayout Style="{StaticResource BasicStackLayout}">
            <Label Text="Naam" FontSize="Title" HorizontalOptions="CenterAndExpand"/>

            <Entry HorizontalOptions="FillAndExpand" Text="{Binding Chore.Name}" />


            <StackLayout Orientation="Horizontal"  HorizontalOptions="CenterAndExpand" >
                <Button Text="Opslaan" Command="{Binding SaveCommand}" Style="{StaticResource SaveButtonStyle}" />
                <Button Text="Verwijderen" Command="{Binding DeleteCommand}" Style="{StaticResource DeleteButtonStyle}"/>
                <Button Text="Annuleren" Command="{Binding CancelCommand}" Style="{StaticResource CancelButtonStyle}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>