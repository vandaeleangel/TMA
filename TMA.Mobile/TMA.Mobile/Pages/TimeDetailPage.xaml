<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TMA.Mobile.Pages.TimeDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <TimePicker Time="{Binding TimeBlock.StartTime}" />
                <TimePicker Time="{Binding TimeBlock.EndTime}" />
            </StackLayout>
            <StackLayout>
                <Picker Title="{Binding SelectedChore.Name}" ItemsSource="{Binding Chores}" SelectedItem="{Binding SelectedChore}"
                        ItemDisplayBinding="{Binding Name}" />
            </StackLayout>
            <StackLayout  HorizontalOptions="CenterAndExpand" >
                <Button Text="Opslaan" HorizontalOptions="CenterAndExpand" Command="{Binding SaveCommand}" />
                <Button Text="Verwijderen" HorizontalOptions="CenterAndExpand" Command="{Binding DeleteCommand}" />
                <Button Text="Annuleren" HorizontalOptions="CenterAndExpand" Command="{Binding CancelCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>